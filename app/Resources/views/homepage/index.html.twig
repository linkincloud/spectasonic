{% extends 'PetkoparaTritonCrudBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - homepage index
{% endblock %}

{% block body %}


<div id="top" class="row">

    <div class="col-md-12">
        <div class="page-header">
            <h3>Homepage
                            </h3>
        </div>
    </div>


    

</div> <!-- /#top -->



<div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>



<div id="list" class="row">

            <div class="col-md-12">
            <a class="btn btn-primary" href="{{ path('back_configuration_homepage_new') }}" style="margin-bottom:10px">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
            </a>
        </div>
    


            <div class="table-responsive col-md-12">
            <table class="table table-striped table-hover table-bordered" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        
                        <th>Id</th>
                        <th>Enabled</th>
                        <th width = "130px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for homepage in homepages %}
                    <tr>
                        
                        <td><a href="{{ path('back_configuration_homepage_show', { 'id': homepage.id }) }}">{{ homepage.id }}</a></td>
                        <td>{% if homepage.enabled %}Yes{% else %}No{% endif %}</td>
                        <td class="actions">    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('back_configuration_homepage_by_id_delete', { 'id': homepage.id}) }}">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
<a title='Show' class="btn btn-info btn-sm" href="{{ path('back_configuration_homepage_show', { 'id': homepage.id }) }}">
    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
</a>
    <a  title='Edit' class="btn btn-primary btn-sm" href="{{ path('back_configuration_homepage_edit', { 'id': homepage.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
</div> <!-- /#list -->




<div id="bottom" class="row">
    
<div class="col-md-6 col-md-offset-2 text-right">
     {{ pagerHtml|raw }} 
</div>
</div> <!-- /#bottom -->



{% endblock %}

