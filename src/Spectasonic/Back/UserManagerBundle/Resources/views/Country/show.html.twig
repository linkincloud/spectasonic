{% extends "SpectasonicBackUserManagerBundle::layout.html.twig" %}

{% block title %}
    {{ 'back.country.show.title_page' | trans }} {{ parent() }}    
{% endblock %}

{% block usermanager_content %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>{{ 'back.country.show.title' | trans }} <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p><strong>Id</strong></p>
            <p>
                {{ country.id }}        </p>

        </div>
        <div class="col-md-6">
            <p><strong>Namefr</strong></p>
            <p>
                {{ country.nameFr }}        </p>

        </div>
        <div class="col-md-6">
            <p><strong>Nameen</strong></p>
            <p>
                {{ country.nameEn }}        </p>

        </div>
        <div class="col-md-6">
            <p><strong>Slug</strong></p>
            <p>
                {{ country.slug }}        </p>

        </div></div>

    <hr/>

    <div class="form-group">
        <a class="btn btn-default" href="{{ path('back_manager_country') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
        <a class="btn btn-primary" href="{{ path('back_manager_country_edit', { 'id':  country.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

            Edit
        </a>
        <a class="btn btn-info" href="{{ path('back_manager_country_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('back_manager_country_delete', { 'id': country.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete</button>
        </form>
    </div>


{% endblock %}

