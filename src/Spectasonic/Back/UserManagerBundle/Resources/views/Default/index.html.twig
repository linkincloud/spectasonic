{% extends "SpectasonicBackUserManagerBundle::layout.html.twig" %}


{% block title %}
    {{ 'usermanager.index.title_page' | trans }} - {{ parent() }}    
{% endblock %}

{% block usermanager_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">User manager</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    User Manager
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>nÂ°id user</th>
                                <th>Client</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Country</th>
                                <th>Roles</th>
                                <th>Last connexion</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in listUsers %}
                                <tr class="odd gradeX">
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.lastname }} {{ user.firstname }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    {% if user.more.country.nameFr is defined %}
                                        <td>{{ user.more.country.nameFr }}</td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                    <td>
                                        <ul>
                                            {% for role in user.roles %}
                                                <li>
                                                    {{ role }}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </td>
                                    <td>{{ user.lastLogin|date("d/m/y") }}</td>

                                    <td><a href="{{ path('spectasonic_back_user_manager_view', {'id': user.id}) }}" type="button" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i> View</a></td>
                                </tr>
                            {% endfor %}


                            </tr>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
