{% extends "SpectasonicBackUserManagerBundle::layout.html.twig" %}

{% block title %}
    {{ 'usermanager.viewuser.title_page' | trans }} - {{ parent() }}    
{% endblock %}

{% block usermanager_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit profile : {{ user.lastname }} {{ user.firstname }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-lg-6">
                    {% if user.more.mainimage is defined %}
                        <p><img width="25%" src="{{ asset(user.more.mainimage) }}" alt=""/></p>
                    {% endif %}
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form, {'method': 'post', 'action': path('spectasonic_back_user_manager_edit_user', {'id':user.id}), 'attr': {'class': 'spectasonic_back_user_manager_edit_user'}}) }}
                    {{ form_row(form.society) }}
                    {% if 'ROLE_VENDEUR' in user.roles %}
                        {{ form_row(form.more.mainimage) }}
                        {{ form_row(form.more.description) }}
                        {{ form_row(form.more.urlToVendor) }}
                        {{ form_row(form.more.urlToProduct) }}
                        {{ form_row(form.more.country) }}
                    {% endif %}
                    {{ form_row(form.gender) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.roles) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}
                    <button type="submit" value="" class="btn btn-success"/>Edit</button>
                    {{ form_end(form) }}   
                </div>

            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}
