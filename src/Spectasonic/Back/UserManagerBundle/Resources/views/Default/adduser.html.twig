{% extends "SpectasonicBackUserManagerBundle::layout.html.twig" %}


{% block title %}
    {{ 'usermanager.viewuser.title_page' | trans }} - {{ parent() }}    
{% endblock %}

{% block usermanager_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add a new user</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form, {'method': 'post', 'action': path('spectasonic_back_user_manager_add_user'), 'attr': {'class': 'spectasonic_back_user_manager_add_user'}}) }}
                    {{ form_row(form.gender) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.roles) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}
                    <button type="submit" value="" class="btn btn-success"/>Add a new user</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}
