{% extends "SpectasonicBackCoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'back.configuration.slider.new.title_page' | trans }} {{ parent() }}    
{% endblock %}

{% block content %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>New Configuration Slider <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h2>
        </div>
    </div>

    <div class="row">
        {% for flash_message in app.session.flashbag.get('info') %}
            <div class="alert alert-error ">
                {{ flash_message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <p>
            <button type="submit" class="btn btn-primary"> 
                Submit <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
            </button>
        </p>


        {{ form_end(form) }}

        <hr/>
        <div class="form-group">
            <a class="btn btn-default" href="{{ path('spectasonic_back_configuration_homepage_slider') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
        </div>

    </div>


{% endblock %}

