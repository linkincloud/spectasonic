{% extends "SpectasonicBackCoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'back.configuration.slider.edit.title_page' | trans }} {{ parent() }}    
{% endblock %}

{% block content %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>Edit Configuration Slider <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
        </div>
    </div>

    <div class="row">

        {% if form_errors(edit_form) %}
            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(edit_form) }}
            </div>
        {% endif %}

        {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-error ">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success ">
                {{ flash_message }}
            </div>
        {% endfor %}


        {{ form_start(edit_form) }}

        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
            </button>
        </p>
        {{ form_end(edit_form) }}

        <hr/>

        <div class="form-group">
            <a class="btn btn-default" href="{{ path('spectasonic_back_configuration_homepage_slider') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-info" href="{{ path('spectasonic_back_configuration_homepage_slider_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
            <form action="{{ path('spectasonic_back_configuration_homepage_slider_delete', { 'id': slider.id }) }}" method="post" style="display: inline-block">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Delete</button>
            </form>
        </div>

    </div>


{% endblock %}

