{% extends "SpectasonicBackCoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'back.configuration.homepage.edit.title_page' | trans }} {{ parent() }}    
{% endblock %}

{% block content %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>{{ 'back.configuration.homepage.edit.title' | trans }}<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
        </div>
    </div>

    <div class="row">
        <p>{{ 'back.configuration.homepage.edit.notice' | trans }}</p>
        {% if form_errors(edit_form) %}
            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(edit_form) }}
            </div>
        {% endif %}

        {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-error ">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success ">
                {{ flash_message }}
            </div>
        {% endfor %}


        {{ form_start(edit_form) }}

        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
            </button>
        </p>
        {{ form_end(edit_form) }}

        <hr/>



    </div>


{% endblock %}

