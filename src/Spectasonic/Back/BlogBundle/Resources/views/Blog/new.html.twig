{% extends "SpectasonicBackBlogBundle::layout.html.twig" %}

{% block title %}
    {{ 'blog.new.title_page' | trans }} {{ parent() }}    
{% endblock %}

{% block blog_content %}
    <section class="panel">
        <header class="panel-heading">
            <h2>New blog</h2>
        </header>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <p>
                <button type="submit" class="btn btn-success"> <i class="fa fa-plus-square-o" aria-hidden="true"></i> Submit</button>
            </p>
            {{ form_end(form) }}


            <div class="form-group">
                <a class="btn btn-default" href="{{ path('back_blog') }}">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    Back to list
                </a>
            </div>

        </div>
    </section>


{% endblock %}

