{% extends "SpectasonicBackShopManagerBundle::layout.html.twig" %}


{% block title %}
    {{ 'category.index.title_page' | trans }} - {{ parent() }}    
{% endblock %}

{% block shop_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Category product</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {% for category in shopCategories %}
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td>
                                    <a href="{{ path('spectasonic_back_shop_manager_edit_category', {'id': category.id}) }}" type="button" class="btn btn-warning"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 -->
    </div>


{% endblock %}
